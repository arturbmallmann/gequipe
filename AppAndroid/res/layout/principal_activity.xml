<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Principal_activity" >

    <Button
        android:id="@+id/btAdicionarTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Adicionar Tarefa" />

    <Button
        android:id="@+id/etLoginUserAddMembro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btRemoverProjeto"
        android:layout_below="@+id/btRemoverProjeto"
        android:layout_marginTop="68dp"
        android:text="Adicionar Membro" />

    <Button
        android:id="@+id/btRemoverProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Remover Projeto" />

    <Button
        android:id="@+id/btAtualizarTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btAdicionarProjeto"
        android:layout_below="@+id/btRemoverProjeto"
        android:layout_marginTop="14dp"
        android:text="Atualizar Tarefa" />

    <Button
        android:id="@+id/btAdicionarProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btRemoverProjeto"
        android:layout_alignRight="@+id/etLoginUserAddMembro"
        android:layout_marginBottom="16dp"
        android:text="Adicionar Projeto" />

    <Button
        android:id="@+id/btVisualizarEquipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btAdicionarProjeto"
        android:layout_alignRight="@+id/btAtualizarTarefa"
        android:text="Visualizar Equipe" />

</RelativeLayout>